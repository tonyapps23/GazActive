<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.gcodes.gactoriginal.RegGaz">



    <androidx.cardview.widget.CardView
        android:id="@+id/card_reg"
        android:layout_width="480dp"
        android:layout_height="630dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        app:cardBackgroundColor="#F8F8F8"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratbold"
                android:gravity="center"
                android:text="Получите полный доступ "
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratbold"
                android:gravity="center"
                android:text="к программе уже сейчас! "
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />


            <androidx.cardview.widget.CardView
                android:id="@+id/card_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardElevation="7dp"
                android:textAlignment="textStart">

                <EditText
                    android:textSize="18sp"
                    android:id="@+id/ed_1st_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_edit_text"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Имя"
                    android:padding="20dp"
                    android:shadowColor="#888888"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:textColor="@color/black"
                    android:textColorHint="#888888" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardElevation="7dp"
                android:textAlignment="textStart">

                <EditText
                    android:textSize="18sp"
                    android:id="@+id/ed_second_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_edit_text"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Фамилия"
                    android:padding="20dp"
                    android:shadowColor="#888888"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"

                    android:textColor="@color/black"
                    android:textColorHint="#888888" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardElevation="7dp"
                android:textAlignment="textStart">

                <EditText
                    android:textSize="18sp"
                    android:id="@+id/ed_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_edit_text"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Ваш e-mail"
                    android:inputType="textEmailAddress"
                    android:padding="20dp"
                    android:shadowColor="#888888"
                    android:shadowDx="1"
                    android:shadowDy="1"

                    android:shadowRadius="1"
                    android:textColor="@color/black"
                    android:textColorHint="#888888" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_5"
                style="@style/Wide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:textAlignment="textStart"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="7dp">

                <LinearLayout
                    style="@style/Wide"
                    android:orientation="horizontal">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/codePicker"
                        style="@style/Wrap"
                        android:layout_gravity="center"
                        app:ccpDialog_backgroundColor="@color/white"
                        app:ccp_autoDetectCountry="true"
                        app:ccp_showArrow="false"
                        app:ccp_textSize="18sp" />



                        <EditText
                            android:textSize="18sp"
                            android:id="@+id/ed_phone"
                            android:layout_width="match_parent"
                            android:hint="Ваш номер телефона"
                            style="@style/Wide"
                            app:hintTextColor="#888888"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_edit_text"
                            android:drawablePadding="15dp"
                            android:fontFamily="@font/montserratregular"
                            android:gravity="center_vertical"
                            android:inputType="phone"
                            android:padding="20dp"
                            android:shadowColor="#888888"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1"
                            android:textColor="@color/black"
                            android:textColorHint="#888888" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:textColor="@color/white"
                android:id="@+id/lslka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_selector"
                android:fontFamily="@font/montserratbold"
                android:gravity="center_horizontal|top"
                android:padding="10dp"
                android:text="ЗАРЕГИСТРИРОВАТЬСЯ"
                android:textAlignment="center"
                android:textSize="23sp"
                android:textStyle="bold" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
